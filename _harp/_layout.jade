doctype
html
    block head
        head
            link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", rel="stylesheet")
            link(rel="stylesheet",href="/main.css")
            script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
            script(src="/js/bootstrap.min.js")
            meta(name="theme-color",content="#156a8b")
            title Lucas Melin
    block body
        body
    block navigation
        nav.navbar.navbar-default.navbar-static-top(role="navigation")
            .container-fluid
                // Brand and toggle button
                .navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse" data-target="#nav-header-collapse")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") Lucas
                // Nav links that get toggled
                #nav-header-collapse.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/journal") Blog Posts
    block content
        != yield
    block footer
        #footer
            .container
                p.text-center
                    a(href="https://plus.google.com/+LucasMelin/")
                        i(class="fa fa-google-plus-square fa-lg",style="padding-right:4px;")
                    a(href="http://instagram.com/sapping")
                        i(class="fa fa-instagram fa-lg",style="padding-right:4px;")
                p.text-center(style="font-size:80%;") Copyright &copy; Lucas Melin 2014
