extends ../_layout.jade

block navigation
        nav(class="navbar navbar-inverse navbar-static-top" role="navigation")
            div(class="container-fluid")
                // Brand and toggle button
                div(class="navbar-header")
                    button(type="button",class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsed-nav-header")
                        span(class="sr-only") Toggle navigation
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand" href="/") Lucas
                // Nav links that get toggled
                div(class="collapse navbar-collapse" id="collapsed-nav-header")
                    ul(class="nav navbar-nav")
                        li
                            a(href="/")
                                |Home
                                span(class="sr-only")
                                    |(current)
                        li(class="active")
                            a(href="#")
                                |Blog Posts

block content
    div(class="container")
        != yield
